<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with model: @user, class: "shadow p-3 mb-3 bg-info rounded" do |form| %>
        <div class="form-group row mb-4">
          <%= form.label :username, class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Create a password" %>
          </div>
        </div>

          <div class="form-group justify-content-center text-center mt-4">
            <%= form.submit(@user.new_record? ? 'Sign up' : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
      <% end %>
  </div>
    <%= link_to '[ Cancel and return to Articles Listing Page ]', articles_path, class: "text-center text-info" %>
  </div>
</div>
